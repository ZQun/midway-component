{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "nohoist": [
        "egg",
        "@midwayjs/core",
        "@midwayjs/decorator",
        "@midwayjs/mock",
        "@midwayjs/web",
        "@midwayjs/koa",
        "@midwayjs/express"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "npmClient": "npm",
  "version": "independent"
}
